{
  "name": "solana-wallet",
  "description": "Solana Wallet",
  "version": "1.0.1",
  "author": "Alex Harley <github.com/alexbharley>",
  "license": "MIT",
  "keywords": [
    "solana",
    "wallet",
    "signer",
    "crypto"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "unpkg": "dist/umd/index.min.js",
  "homepage": "https://github.com/WalletConnect/solana-wallet",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WalletConnect/solana-wallet.git"
  },
  "bugs": {
    "url": "https://github.com/WalletConnect/solana-wallet/issues"
  },
  "scripts": {
    "start": "tsdx watch",
    "clean": "rm -rf dist",
    "build:cjs": "./node_modules/.bin/tsc -p tsconfig.cjs.json",
    "build:umd": "webpack",
    "build": "yarn clean && yarn build:cjs && yarn build:umd",
    "test": "tsdx test ./test",
    "test:watch": "tsdx test --watch ./test",
    "lint": "tsdx lint src test",
    "prepare": "yarn lint && yarn build && yarn test"
  },
  "dependencies": {
    "@solana/web3.js": "^1.66.2",
    "bs58": "^5.0.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "13.7.0",
    "husky": "4.2.1",
    "tsdx": "0.12.3",
    "tslib": "1.10.0",
    "typescript": "^4.6.2",
    "webpack": "4.41.6",
    "webpack-cli": "3.3.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
